# Image build scripts
COPY \
  manylinux-common/install-python-packages.sh \
  /buildscripts/

RUN \
  set -x && \
  apt-get update -qq && \
  apt-get -y install \
    dirmngr \
    gnupg \
    python3-dev \
    zlib1g-dev \
    gettext \
    openssh-client \
    pax \
    wget \
    zip \
  && \
  apt-get clean -qq && \
  rm -rf /var/lib/apt/lists/* && \
  /buildscripts/install-python-packages.sh && \
  rm -rf /buildscripts

# Runtime scripts
COPY manylinux-common/pre_exec.sh /dockcross/
